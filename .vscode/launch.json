{
    "version": "0.2.0",
    "configurations": [
        
        {
            "name": "Python: Debug main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "python": "/home/aniruth/miniconda3/envs/BBDM/bin/python3",
            "justMyCode": false,  // Ensures it jumps into other files
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--config", "/home/aniruth/Desktop/RRC/BBDM-RRC/configs/Template-LBBDM-f4.yaml",
                "--train",
                "--sample_at_start",
                "--save_top",
                "--gpu_ids", "0"
            ]
        }
    ]
}
